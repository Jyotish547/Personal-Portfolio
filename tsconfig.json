{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Sanity
    "baseUrl": ".",
    "paths": {
      "@sanity/client": ["./sanity/node_modules/@sanity/client"],
      "sanity": ["./sanity/node_modules/sanity/lib/exports/index"]
    },
  },
  "typeRoots": [
    "../node_modules/@types/",
    "../assets/types"
  ],
  "noImplicitAny": false,
  "include": ["src", "**/*.ts", "test", "src/particles.js", "**/*.d.ts", "global.d.ts"]
}
